{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "outDir": "./dist-node",
    "strict": true
  },
  "include": ["vite.config.ts", "vitest.config.ts"]
}
